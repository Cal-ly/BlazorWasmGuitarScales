@using BlazorWasmGuitarScales.Models
@using BlazorWasmGuitarScales.Services
@using System.Text.Json
@inject WeatherService WeatherService

<h3>Current Weather and 3-Day Forecast</h3>

@if (errorMessage != null)
{
    <p style="color: red;">@errorMessage</p>
}
else if (weatherResponse != null)
{
    <h4>Current Weather</h4>
    <p>City: @weatherResponse.Location?.Name</p>
    <p>Temperature: @weatherResponse.Current?.Temp_C &deg;C</p>
    <p>Feels Like: @weatherResponse.Current?.Feelslike_C &deg;C</p>
    <p>Condition: @weatherResponse.Current?.Condition?.Text</p>
    <p>Humidity: @weatherResponse.Current?.Humidity %</p>

    <h4>3-Day Forecast</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Avg Temp (°C)</th>
                <th>Min Temp (°C)</th>
                <th>Max Temp (°C)</th>
                <th>Condition</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var day in weatherResponse.Forecast?.Forecastday ?? Enumerable.Empty<ForecastDay>())
            {
                <tr>
                    <td>@day.Date</td>
                    <td>@day.Day?.Avgtemp_C</td>
                    <td>@day.Day?.Mintemp_C</td>
                    <td>@day.Day?.Maxtemp_C</td>
                    <td>@day.Day?.Condition?.Text</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading weather data...</p>
}

@code {
    private WeatherResponse? weatherResponse;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            weatherResponse = await WeatherService.GetWeatherDataAsync("copenhagen", 3); // Adjust the number of days as needed
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}